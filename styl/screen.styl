*
	border 0
	margin 0
	padding 0
	font-size 100%
	box-sizing border-box


html
	width 100%
	background-image url("../img/noise.png"), -webkit-radial-gradient(top center, rgb(30, 170, 180), rgb(30, 120, 160) 600px)

body
	font-size 14px
	line-height 1.3
	font-weight 500
	font-family Georgia
	color rgb(80,80,80)

ul
	list-style-position inside
	margin-bottom 10px

p
	margin-bottom 10px

h1, h2, h3
	font-family Arial
	font-weight 900




#wrapcontent
	width 640px
	margin auto
	padding-top 60px
	background-image url("../img/mustache.png")
	background-repeat no-repeat
	background-position 320px 30px
	background-size 35%

header
	h1
		font-size 90px
		font-family "Grand Hotel", sans-serif
		//font-family "Text Me One", sans-serif
		color white
		text-shadow 2px 2px 1px rgba(0,0,0,0.4)
		margin-bottom 20px
	h2
		font-size 20px
		//font-family "Grand Hotel", sans-serif
		font-family "Trebuchet MS", sans-serif
		//font-family "Text Me One", sans-serif
		font-weight 500
		color white
		text-shadow 1px 1px 1px rgba(0,0,0,0.4)
		text-align center
		margin-bottom 40px

section
	background-color white
	border-radius 8px
	box-shadow 1px 1px 10px rgba(0,0,0,0.4)
	margin-bottom 20px
	padding-bottom 40px
	h1
		color rgb(0,0,0)
		font-size 18px
		margin-bottom 20px
		border-bottom 1px solid rgb(200,200,200)
	h2
		color rgb(40,40,40)
		font-size 15px
		margin-bottom 20px
	h1+h2
		margin-top: -10px
	> div:not(.code)
		padding: 20px 20px



footer
	text-align center


//Codemirror

.CodeMirror
	height: auto

.CodeMirror-lines
	padding: 20px 40px

.CodeMirror-scroll
	height: inherit


